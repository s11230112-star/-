    <script>
        function openPlatform(url) {
            window.open(url, '_blank');
        }

        async function searchResources() {
            const query = document.getElementById('searchInput').value.trim();
            const resultsDiv = document.getElementById('results');
            
            if (!query) {
                return;
            }

            resultsDiv.innerHTML = '<div class="loading">ğŸ” æ­£åœ¨æœå°‹ã€Œ' + query + 'ã€çš„å­¸ç¿’è³‡æº...</div>';
            
            setTimeout(() => {
                const results = generateResults(query);
                displayResults(query, results);
            }, 500);
        }

        function generateResults(query) {
            return [
                {
                    title: `W3Schools - ${query} æ•™å­¸`,
                    description: `W3Schools æä¾›ç°¡å–®æ˜“æ‡‚çš„ ${query} æ•™å­¸ï¼ŒåŒ…å«å¤§é‡äº’å‹•å¼ç¯„ä¾‹å’Œç·´ç¿’é¡Œã€‚`,
                    url: `https://www.google.com/search?q=${encodeURIComponent('site:w3schools.com ' + query + ' tutorial')}`
                },
                {
                    title: `${query} å®Œæ•´èª²ç¨‹ - Codecademy`,
                    description: `é€é Codecademy çš„äº’å‹•å¼èª²ç¨‹å­¸ç¿’ ${query}ï¼Œé©åˆåˆå­¸è€…å’Œé€²éšå­¸ç¿’è€…ã€‚`,
                    url: `https://www.google.com/search?q=${encodeURIComponent('site:codecademy.com learn ' + query)}`
                },
                {
                    title: `${query} æ•™å­¸å½±ç‰‡ - YouTube`,
                    description: `åœ¨ YouTube ä¸Šæ‰¾åˆ°æœ€ç†±é–€çš„ ${query} æ•™å­¸å½±ç‰‡ï¼Œå¾å…¥é–€åˆ°ç²¾é€šã€‚`,
                    url: `https://www.youtube.com/results?search_query=${encodeURIComponent(query + ' tutorial beginner')}`
                },
                {
                    title: `freeCodeCamp - ${query} å…è²»èª²ç¨‹`,
                    description: `freeCodeCamp æä¾›å®Œå…¨å…è²»çš„ ${query} èª²ç¨‹ï¼ŒåŒ…å«å°ˆé¡Œå¯¦ä½œå’Œèªè­‰ã€‚`,
                    url: `https://www.google.com/search?q=${encodeURIComponent('site:freecodecamp.org ' + query)}`
                },
