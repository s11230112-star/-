        function displayResults(query, results) {
            const resultsDiv = document.getElementById('results');
            
            let html = '<div class="results-container">';
            html += `<h3 class="results-title">ğŸ¯ æ‰¾åˆ° ${results.length} å€‹ã€Œ${query}ã€å­¸ç¿’è³‡æº</h3>`;
            
            results.forEach((result, index) => {
                html += `
                    <div class="result-card" onclick="openResult('${result.url}')">
                        <h3>ğŸŒ ${result.title}</h3>
                        <div class="description">${result.description}</div>
                        <div class="url">ğŸ”— ${result.url}</div>
                    </div>
                `;
            });
            
            html += '<div class="click-hint">ğŸ’¡ é»æ“Šä»»ä½•çµæœå¡ç‰‡å³å¯å‰å¾€è©²ç¶²ç«™</div>';
            html += '</div>';
            
            resultsDiv.innerHTML = html;
        }

        function openResult(url) {
            window.open(url, '_blank');
        }

        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchResources();
            }
